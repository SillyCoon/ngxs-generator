{
  "name": "ngxs-generator",
  "icon": "icon.png",
  "displayName": "ngxs-generator",
  "description": "code generator for ngxs",
  "publisher": "SillyCoon",
  "version": "1.0.1",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/sillycoon/ngxs-generator.git"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:ngxs-generator.makeAction",
    "onCommand:ngxs-generator.makeState"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ngxs-generator.makeAction",
        "title": "Make Ngxs Action"
      },
      {
        "command": "ngxs-generator.makeState",
        "title": "Make Ngxs State structure"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ngxs-generator.makeAction",
          "group": "mygroup1",
          "when": "resourceLangId == typescript"
        },
        {
          "command": "ngxs-generator.makeState",
          "group": "mygroup1"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "release": {
    "branches": "master",
    "verifyConditions": [
      "@semantic-release/github"
    ],
    "publish": [
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "@semantic-release/github": "^7.2.0"
  }
}