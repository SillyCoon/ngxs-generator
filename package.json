{
	"name": "ngxs-generator",
	"displayName": "ngxs-generator",
	"description": "code generator for ngxs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:ngxs-generator.helloWorld",
    "onCommand:ngxs-generator.makeAction"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ngxs-generator.helloWorld",
				"title": "Hello World"
      },
      {
        "command": "ngxs-generator.makeAction",
        "title": "Make Ngxs Action"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ngxs-generator.makeAction",
          "group": "mygroup1",
          "when": "resourceLangId == typescript"
        }
      ]
    }
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
